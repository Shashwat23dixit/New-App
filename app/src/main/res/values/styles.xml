
<resources>
    
    
    <style name="AppTheme" parent = "Theme.MaterialComponents.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>

</resources>
    
